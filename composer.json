{
    "name": "phpcompose/compose",
    "description": "A Thin MVC Application framework for Zend Expressive / Stratigility",
    "type": "project",
    "homepage": "https://github.com/phpcompose/compose",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Alamin Ahmed",
            "homepage": "http://aahmed.com/"
        }
    ],
    "require": {
        "php": "^7.1",
        "zendframework/zend-stdlib": "^3.0",
        "symfony/event-dispatcher": "^3.1",
        "zendframework/zend-stratigility": "^2.0",
        "zendframework/zend-diactoros": "^1.3",
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Compose\\": "src/Compose/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/ public/index.php",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
