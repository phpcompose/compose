{
    "name": "phpcompose/compose",
    "type": "library",
    "description": "A PHP framework",
    "autoload": {
        "psr-4": {
            "Compose\\": "src/"
        }
    },
    "require": {
        "php": "~8.3",
        "psr/container": "^2.0",
        "laminas/laminas-diactoros": "^3.6",
        "laminas/laminas-stratigility": "^4.2",
        "laminas/laminas-config-aggregator": "^1.1",
        "laminas/laminas-httphandlerrunner": "^2.10",
        "league/plates": "^3.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test-all": "phpunit --colors=always --testdox --bootstrap vendor/autoload.php tests",
        "test": "phpunit --colors=always --testdox --bootstrap vendor/autoload.php tests",
        "serve": "php -S 0.0.0.0:8080 -t public/"
    },
    "config": {
        "platform": {
            "php": "8.3.0"
        },
        "sort-packages": true
    }
}
